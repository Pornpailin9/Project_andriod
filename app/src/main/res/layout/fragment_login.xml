<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p1"
    tools:context=".login">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:background="#A6E4E0E0"
            android:layout_centerInParent="true">

            <TextView
                android:text="CookieRun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/orangejuice"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="79dp" />

            <EditText
                android:id="@+id/user_input"
                android:hint="username"
                android:fontFamily="@font/petchlamoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/pass_input"
                android:hint="password"
                android:fontFamily="@font/petchlamoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF000000" />

            <Button
                android:id="@+id/btnNextPage"
                android:text="LOGIN"
                android:fontFamily="@font/orangejuice"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="#4A636D"
                android:backgroundTint="#4A636D"
                android:textColor="#EE8B6B"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="490dp" />
    </RelativeLayout>
</FrameLayout>