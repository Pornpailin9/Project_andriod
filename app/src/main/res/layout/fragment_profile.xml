<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="730dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#AAA5A5"
    tools:context=".login">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_profile"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="@font/orangejuice"
        android:text="Name"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_button2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#4A636D"
        android:backgroundTint="#4A636D"
        android:fontFamily="@font/orangejuice"
        android:text="logout"
        android:textColor="#EE8B6B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="358dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/petchlamoon"
        android:text="I hope you enjoy with cookie run because sometime you maybe feel bored or feel tired with SE you can play cookie run to relax. \n And I hope you get to know more about the characters in this game."
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="bold" />
</LinearLayout>
